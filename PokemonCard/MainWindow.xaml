<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid Margin="20" Background="Beige">
        <!-- ROWS FOR CARD SECTIONS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- HEADER -->
            <RowDefinition Height="2*"/>    <!-- PICTURE -->
            <RowDefinition Height="Auto"/> <!-- SUB INFO -->
            <RowDefinition Height="*"/>  <!-- MOVE 1 -->
            <RowDefinition Height="*"/>  <!-- MOVE 2 -->
            <RowDefinition Height="Auto"/> <!-- WEAK/RESIST/RETREAT -->
            <RowDefinition Height="Auto"/> <!-- FOOTER -->



        </Grid.RowDefinitions>
        
        <!-- COLUMNS-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>
            
        <!--HEADER-->

        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- NAME-->
                <ColumnDefinition Width="*"/> <!-- SPACE -->
                <ColumnDefinition Width="Auto"/> <!-- HP-->
            </Grid.ColumnDefinitions>
            
            
            <!-- NAME-->
            <Border Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="Name" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Border>

            <!-- EMPTY SPACE-->
            <Border Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="(empty)" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>

            <!-- HP-->
            <Border Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Margin="2" Padding="5">
                <TextBlock Text="HP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
        </Grid>

        <!-- IMAGE ROW -->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="0" BorderBrush="Yellow" BorderThickness="1" Background="LightGray">
            <Rectangle Width="330" Height="250" Fill="DarkBlue" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- SUB INFO ROW 2 -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="0" BorderBrush="Yellow" BorderThickness="1">
            <TextBlock Text="SUB-INFO / NO / POKEMON TYPE / HT WT" TextAlignment="Center" FontSize="9"/>
        </Border>
        
        <!-- ATTACK 1 ROW 3-->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- ATTACK HEADER-->
                <RowDefinition Height="Auto"/> <!-- ATTACK DESCRIPTION-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- ICON -->
                <ColumnDefinition Width="*"/> <!-- NAME -->
                <ColumnDefinition Width="Auto"/> <!-- DAMAGE -->
            </Grid.ColumnDefinitions>
            
            <!-- HEADER ROW -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="ICON"/>
            </Border>


            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="ATTACK NAME" TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock Text="DAMAGE"/>
            </Border>

            <!-- DESCRIPTION ROW-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Margin="0, 2">
                <TextBlock FontSize="8" Text="ATTACK DESCRIPTION GOES HERE, GUUGUUUUUUUUU GAGAAAAAAAA MAMAAAAAAAAAAAAAAAAAAAAAA MIAAAAAA" TextWrapping="Wrap"/>
            </Border>
            </Grid>
            



    <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="0, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
            <TextBlock Text="ICON"/>
        </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
            <TextBlock Text="ATTACK NAME" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
            <TextBlock Text="DAMAGE"/>
        </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Transparent" BorderThickness="0"  Margin="0">
                <TextBlock FontSize="8" Text="ATTACK DESCRIPTION GOES HERE, shirororororroo MAMAAAAAAAAAAAAAAAAAAAAAA MIAAAAAA" TextWrapping="Wrap"/>
            </Border>

        </Grid>

        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock Text="WEAKNESS" FontSize="6"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock Text="RESISTANCE" FontSize="6"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock Text="RETREAT" FontSize="6"/>
            </Border>
        </Grid>
        <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0" Padding="5" Margin="2">
                <TextBlock FontSize="8" Text="ICON ICON # SET"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0" Padding="5" Margin="2">
                <TextBlock FontSize="8" Text="COPYRIGHT TEXT"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0" Padding="3" Margin="2">
                <TextBlock FontSize="6" Text="VERY GOOD VERY NICE AND FANTASTIC" TextWrapping="Wrap"/>
            </Border>
            
        </Grid>

    </Grid>
</Window>


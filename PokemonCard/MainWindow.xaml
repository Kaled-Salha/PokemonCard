<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="0.494"/>
            <GradientStop Color="#FF909090" Offset="0.921"/>
            <GradientStop Color="#FF909090" Offset="0.14"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="12, 12, 12, 12" Background="LightBlue">
        <!-- ROWS FOR CARD SECTIONS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- HEADER -->
            <RowDefinition Height="2*"/>
            <!-- PICTURE -->
            <RowDefinition Height="Auto"/>
            <!-- SUB INFO -->
            <RowDefinition Height="*"/>
            <!-- MOVE 1 -->
            <RowDefinition Height="*"/>
            <!-- MOVE 2 -->
            <RowDefinition Height="Auto"/>
            <!-- WEAK/RESIST/RETREAT -->
            <RowDefinition Height="Auto"/>
            <!-- FOOTER -->



        </Grid.RowDefinitions>

        <!-- COLUMNS-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>

        <!--HEADER-->

        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- NAME-->
                <ColumnDefinition Width="*"/>
                <!-- SPACE -->
                <ColumnDefinition Width="Auto"/>
                <!-- HP-->
            </Grid.ColumnDefinitions>


            <!-- NAME-->
            <Border Grid.Column="0" BorderBrush="LightGray" Margin="0, 0, 10, 20" Padding="3,0,5,0" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF887F7F"/>
                        <GradientStop Color="White" Offset="0.407"/>
                        <GradientStop Color="#FFADA7A7" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock x:Name="NameTextBlock" Text="Psyduck" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial" FontWeight="Bold" FontSize="18"/>
            </Border>

            <!-- EMPTY SPACE-->
            <Border Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Margin="0,0,0,2" Padding="0,2,2,2">
                <Button Content="Choose Pokemon" Click="OpenSelectionWindowClick"/>
            </Border>

            <!-- HP-->
            <Border Grid.Column="2" BorderBrush="Transparent" BorderThickness="0" Margin="-1" Padding="5">
                <TextBlock x:Name="HpTextBlock" Text="HP" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Arial" FontWeight="Bold" FontSize="18"/>
            </Border>

        </Grid>

        <!-- IMAGE ROW -->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="0" BorderBrush="Black" BorderThickness="1" Background="LightBlue">
            <Image Source="Screenshot 2025-10-01 211725.png"/>
        </Border>

        <!-- SUB INFO ROW 2 -->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="0" BorderBrush="DimGray" BorderThickness="1">
            <TextBlock x:Name="SubInfoTextBlock" Text="SUB-INFO / NO / POKEMON TYPE / HT WT" TextAlignment="Center" FontSize="9" Background="LightGray" UseLayoutRounding="False"/>
        </Border>

        <!-- ATTACK 1 ROW 3-->
        <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0, 30, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- ATTACK HEADER-->
                <RowDefinition Height="Auto"/>
                <!-- ATTACK DESCRIPTION-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- ICON -->
                <ColumnDefinition Width="*"/>
                <!-- NAME -->
                <ColumnDefinition Width="Auto"/>
                <!-- DAMAGE -->
            </Grid.ColumnDefinitions>

            <!-- HEADER ROW -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" Padding="1" Margin="0,0,2,0">
                <TextBlock x:Name="Attack1IconTextBlock" Text="Icon" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
            </Border>


            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock x:Name="Attack1NameTextBlock" Text="Overthink" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock x:Name="Attack1DMGTextBlock" Text="DAMAGE"/>
            </Border>

            <!-- DESCRIPTION ROW-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Transparent" BorderThickness="0" Margin="6,0,0,0">
                <TextBlock x:Name="Attack1DescTextBlock" FontSize="8" Text="During your opponent's next turn, whenever they flip a coin, treat it as tails." TextWrapping="Wrap"/>
            </Border>
        </Grid>




        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="0, 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Row="0" Grid.Column="0" BorderBrush="White" Padding="0" Margin="0">
                <TextBlock x:Name="Attack2IconTextBlock" Text="Icon2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Transparent" BorderThickness="0" Padding="1" Margin="2">
                <TextBlock x:Name="Attack2NameTextBlock" Text="Water Gun" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,50,0"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Transparent" BorderThickness="1" Padding="5" Margin="2">
                <TextBlock x:Name="Attack2DMGTextBlock" Text="10" FontSize="15"/>
            </Border>

            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="Transparent" BorderThickness="0"  Margin="0">
                <TextBlock x:Name="Attack2DescTextBlock" FontSize="8" TextWrapping="Wrap"/>
            </Border>

        </Grid>

        <Grid Grid.Row="5" Grid.ColumnSpan="3" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock x:Name="WeaknessTextBlock" Text="WEAKNESS" FontSize="6"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock x:Name="ResistanceTextBlock" Text="RESISTANCE" FontSize="6"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="Yellow" BorderThickness="0, 1" Padding="5" Margin="2">
                <TextBlock x:Name="RetreatTextBlock" Text="RETREAT" FontSize="6"/>
            </Border>
        </Grid>
        <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0" Padding="5" Margin="2,25,0,0">
                <TextBlock x:Name="SetNumberTextBlock" FontSize="6" Text="ICON ICON # SET"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0" Padding="5" Margin="2,25,0,0">
                <TextBlock FontSize="6" x:Name="CopyRightTextBlock" Text="COPYRIGHT TEXT"/>
            </Border>

            <Border Grid.Row="6" Grid.ColumnSpan="3" BorderBrush="Transparent" BorderThickness="0" Padding="4,0,4,4" Margin="0,4,0,0">
                <TextBlock x:Name="FooterTextTextBlock" Text="It is constantly wracked by a headache. When the headache turns intense, it begins using weird powers."
                FontSize="8" FontStyle="Italic" TextWrapping="Wrap"
                TextAlignment="Right" Foreground="DarkSlateGray" FontFamily="Segoe UI" Margin="237,0,0,0"/>
            </Border>

        </Grid>

    </Grid>
</Window>

